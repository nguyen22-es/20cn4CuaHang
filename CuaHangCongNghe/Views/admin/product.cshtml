@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CuaHangCongNghe.Controllers.HomeController.listsanpham
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form action="product" method="get">
                <div class="input-group">
                    
                    <input class="form-control" id="system-search" name="nametim" placeholder="Search for" required>
                    <a href="/admin/themsanpham" class="btn btn-danger btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                        </span>
                        <span class="text">thêm sản phẩm</span>
                    </a>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <table class="table table-list-search">
                <thead>
                    <tr>
                        <th>ID san phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>giá</th>
                        <th>số lượng</th>
                     

                    </tr>
                </thead>
                <tbody>
                   

                    
                    @foreach (var n in Model.Products)
                    {
                        
                        <tr>
                            <td>@n.Id</td>
                            <td>@n.Name</td>
                            <td>@n.Price</td>
                            <td>@n.Stockquantity</td>                         
                            <td>
                                <a href="/admin/Deleteproduct/@n.Id" class="btn btn-danger btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                               
                               
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>

