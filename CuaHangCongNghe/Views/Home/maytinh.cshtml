@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- computers section start -->


<form action="/Home/maytinh" method="post">
    <div class="corner-option">
    <select id="ipdanhmuc1" name="name">
        <option value=""></option>
        <option value="3000000">nhỏ hơn 3 triệu</option>
        <option value="7000000">nhỏ hơn 7 triệu</option>
        <option value="10000000">nhỏ hơn 10 triệu</option>
    </select>
</div>
<div class="corner-tag">
    <label for="ipdanhmuc2">Chọn một loại sản phẩm:</label>
    <select id="ipdanhmuc2" name="name1">
            <option value=""></option>
        @foreach (var category in Model.Item2)
        {
            <option value="@category.Name">@category.Name</option>
        }
    </select>
</div>
    <input type="submit" value="Thay đổi">
</form>
<div class="computers_section_2">
    <div class="container-fluid">
        <div class="computer_main">
            <div class="row">
               
                   @foreach (var item in Model.Item1)
                    {
                        
                            <div class="col-md-4">
                             <div class="product-container">
                            
                                    <img class="product-image" src="@item.ImageUrl" alt="@item.Name">
                                    <div class="card_main">
                                        <h6 class="price_text">giá: @item.Price</h6>
                                        <h6 class="price_text">số lượng còn lại: @item.Stockquantity</h6>
                                        <h5 class="samsung_text">@item.Name</h5>
                                        <a href="admin/addsanpham/@item.Id" class="btn btn-primary">thêm vào giỏ hàng</a>
                                    </div>
                                </div>
                            </div>                   
                }
            </div>
        </div>
    </div>
</div>

