@model CuaHangCongNghe.Models.RegisterViewModel

@{
    Layout = "LayoutAdmin";
}

    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Thêm người dùng mới</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="CreateUser" method="post">
                            <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                            <div class="form-group row">
                                <label asp-for="nameLogin" class="col-4 col-form-label">Tên đăng nhập</label>
                                <div class="col-8">
                                    <input asp-for="nameLogin"  class="form-control here" type="text" required>
                                    <span asp-validation-for="nameLogin" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-4 col-form-label">Mật khẩu</label>
                                <div class="col-8">
                                    <input asp-for="Password" class="form-control here" type="password" required>
                                    <span asp-validation-for="Password" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PasswordConfirm" class="col-4 col-form-label">nhập lại mật khẩu</label>
                                <div class="col-8">
                                    <input asp-for="PasswordConfirm" class="form-control here" type="password" required>
                                    <span asp-validation-for="PasswordConfirm" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8 text-right">
                                    <button name="submit" type="submit" class="btn btn-info">Xác nhận</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
