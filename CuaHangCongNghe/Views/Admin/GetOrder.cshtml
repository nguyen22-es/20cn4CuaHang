@model CuaHangCongNghe.Models.UserOrdersViewModel

<div class="row">
    <div class="col-md-3">
        <div class="list-group my-4">
            <a asp-action="GetOrders" class="list-group-item list-group-item-action ">Đơn hàng</a>
            <a asp-action="GetUsers" class="list-group-item list-group-item-action active">Người dùng</a>
            <a asp-action="GetRoles" class="list-group-item list-group-item-action ">Vai trò</a>
            <a asp-action="AddProduct" class="list-group-item list-group-item-action ">Thêm sản phẩm</a>
        </div>
    </div>

            <h2>Danh sách đơn hàng</h2>

            @if (Model.Orders.Count > 0)
            {


                @foreach (var order in Model.Orders)
                {
                    <strong>trạng thái:</strong> @order.Status

                    <br />


                    foreach (var item in order.ItemViewModels)
                    {
                        <li>
                            <strong>tên sản phẩm:</strong> @item.Product.Name<br />
                            <strong>ID Người dùng:</strong> @item.quantity<br />
                            <strong>Trạng thái:</strong> @item.Price<br />
                        </li>
                    }
                    <strong>Tổng số tiền phải thanh toán:</strong> @order.FullPrice <br />
                }
            }
        </div>
