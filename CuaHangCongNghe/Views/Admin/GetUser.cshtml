@model CuaHangCongNghe.Models.UserViewModel

<div class="row">
    <div class="col-md-3">
        <div class="list-group my-4">
            <a asp-action="GetOrders" class="list-group-item list-group-item-action ">Đơn hàng</a>
            <a asp-action="GetUsers" class="list-group-item list-group-item-action active">Người dùng</a>
            <a asp-action="GetRoles" class="list-group-item list-group-item-action ">Vai trò</a>
            <a asp-action="AddProduct" class="list-group-item list-group-item-action ">Thêm sản phẩm</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card my-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Tên người dùng: @Model.NameUser</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <p class="font-weight-normal">@Model.EmailUser</p>
                        </div>
                        <div class="form-group">
                            <label for="phone">Số điện thoại</label>
                            <p class="font-weight-normal">@Model.PhoneUser</p>
                        </div>
                        <div class="form-group">
                            <label for="phone">Địa chỉ</label>
                            <p class="font-weight-normal">@Model.AddressUser</p>
                        </div>
                        <div class="form-group">
                            <label for="phone">Số điện thoại</label>
                            <p class="font-weight-normal">@Model.RegistrationDate.ToString("dd/MM/yyyy HH:mm:ss tt")</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="btn-group float-right">
                            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Thao tác
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-action="ChangeUserPassword" asp-route-id="@Model.Id">Thay đổi mật khẩu</a>
                                <a class="dropdown-item" asp-action="EditUser" asp-route-id="@Model.Id">Thay đổi thông tin người dùng</a>
                                <a class="dropdown-item" asp-action="EditUserRights" asp-route-id="@Model.Id">Thay đổi quyền người dùng</a>
                                <a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@Model.Id">Xóa người dùng</a>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>