@model CuaHangCongNghe.Models.UserViewModel
@{
    Layout = "LayoutAdmin";
}
<div class="col-md-8" style="margin-top:150px">
    <div class="card my-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4>Tên người dùng: @Model.NameUser</h4>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <p class="font-weight-normal">@Model.EmailUser</p>
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại:</label>
                        <p class="font-weight-normal">@Model.PhoneUser</p>
                    </div>
                    <div class="form-group">
                        <label for="phone">Địa chỉ:</label>
                        <p class="font-weight-normal">@Model.AddressUser</p>
                    </div>
                    <div class="form-group">
                        <label for="phone">Ngày đăng ký:</label>
                        <p class="font-weight-normal">@Model.RegistrationDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
            <div class="btn-group">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                   Thao tác
                </button>
                <ul class="dropdown-menu">
                    <a class="dropdown-item" asp-action="ChangeUserPassword" asp-route-id="@Model.Id">
                        Thay đổi mật
                        khẩu
                    </a>
                    <a class="dropdown-item" asp-action="EditUser" asp-route-id="@Model.Id">
                        Thay đổi thông tin người
                        dùng
                    </a>
                    <a class="dropdown-item" asp-action="EditUserRights" asp-route-id="@Model.Id">
                        Thay đổi quyền người
                        dùng
                    </a>
                    <a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@Model.Id">Xóa người dùng</a>
                </ul>
            </div>
        </div>
    </div>
</div>