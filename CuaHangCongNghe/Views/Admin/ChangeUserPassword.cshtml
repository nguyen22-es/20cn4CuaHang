@model CuaHangCongNghe.Models.UserViewModel

<div class="col-md-9 my-4">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4>thay đổi mật khẩu người dùng @Model.NameUser</h4>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="ChangeUserPassword">
                        <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                        @*<input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Name" />*@
                        <div class="form-group row">
                            <label asp-for="Password" class="col-4 col-form-label">Mật khẩu hiện tại</label>
                            <div class="col-8">
                                <input asp-for="Password" placeholder="Password" class="form-control here" type="password" autocomplete="new-password" required>
                                <span asp-validation-for="Password" class="sr-only"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NewPassword" class="col-4 col-form-label">mật khẩu mới</label>
                            <div class="col-8">
                                    <input asp-for="NewPassword" placeholder="NewPassword" class="form-control here" type="password" required>
                                <span asp-validation-for="NewPassword" class="sr-only"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PasswordConfirm" class="col-4 col-form-label">xác nhận mật khẩu</label>
                            <div class="col-8">
                                    <input asp-for="PasswordConfirm" placeholder="PasswordConfirm" class="form-control here" type="password" required>
                                <span asp-validation-for="PasswordConfirm" class="sr-only"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-4 col-8 text-right">
                                <button name="submit" type="submit" class="btn btn-info">xác nhận</button>
                            </div>
                        </div>
                    </form>
                    <a class="text-info" asp-action="GetUser" asp-route-id="@Model.Id"><i class="bi bi-arrow-left mr-2 text-info"></i>quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>