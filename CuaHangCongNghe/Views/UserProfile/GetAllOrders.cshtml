@model Shop.Models.UserOrdersViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="Index" class="list-group-item list-group-item-action">Данные пользователя</a>
            <a asp-action="Edit" asp-route-id="@Model.User.Id" class="list-group-item list-group-item-action">Изменить данные</a>
            <a asp-action="ChangePassword" asp-route-id="@Model.User.Id" class="list-group-item list-group-item-action">Изменить пароль</a>
            <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">Корзина</a>
            <a asp-action="GetAllOrders" class="list-group-item list-group-item-action">Заказы</a>
            <a class="list-group-item list-group-item-action">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выйти из профиля" style="background:none;border:none;padding:0">
                </form>
            </a>
 

    <h2>Danh sách đơn hàng</h2>
    
    @if (Model.Orders.Count > 0)
    {
    
        
                @foreach (var order in Model.Orders)
                {
                    <strong>trạng thái:</strong> @order.Status<br />
                                 
               
                    foreach(var item in order.ItemViewModels)
                    {
                        <li>
                            <strong>tên sản phẩm:</strong> @item.Product.Name<br />
                            <strong>ID Người dùng:</strong> @item.quantity<br />
                            <strong>Trạng thái:</strong> @item.Price<br />
                        </li>
                    }
                    <strong>Tổng số tiền phải thanh toán:</strong> @order.FullPrice <br />
                }
    }
</div>