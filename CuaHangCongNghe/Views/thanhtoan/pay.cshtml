@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CuaHangCongNghe.Controllers.sanphamthanhtoan

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap.min.css" type="text/css">
    <!-- Font awesome -->
    <link rel="stylesheet" href="../vendor/font-awesome/css/font-awesome.min.css" type="text/css">

    <!-- Custom css - Các file css do chúng ta tự viết -->
    <link rel="stylesheet" href="../assets/css/app.css" type="text/css">
</head>

<body>
    <!-- header -->
    <!-- end header -->

    <main role="main">
        <div class="container mt-4">
            <div class="py-5 text-center">
                <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                <h2>Thanh toán</h2>
                <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
            </div>

            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">ĐƠN HÀNG</span>
                        <span class="badge badge-secondary badge-pill"></span>
                    </h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Tên sản phẩm: @Model.tuple.Item1.Name</h6>
                                <small class="text-muted">Số lượng: @Model.tuple.Item1.Stockquantity</small>
                            </div>
                            <input name="gia" class="form-control text-muted" value="@Model.tuple.Item1.Price" readonly>
                        </li>
                    </ul>
                </div>

                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Thông tin khách hàng</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <label for="kh_ten">Họ tên</label>
                            <input type="text" class="form-control" name="kh_ten" id="kh_ten" value="@Model.tuple.Item2.NameUser" readonly>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_diachi">Địa chỉ</label>
                            <input type="text" class="form-control" name="kh_diachi" id="kh_diachi" value="@Model.tuple.Item2.AddressUser" readonly>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_dienthoai">Điện thoại</label>
                            <input type="text" class="form-control" name="kh_dienthoai" id="kh_dienthoai" value="@Model.tuple.Item2.PhoneUser" readonly>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_email">Email</label>
                            <input type="text" class="form-control" name="kh_email" id="kh_email" value="@Model.tuple.Item2.EmailUser" readonly>
                        </div>
                        <div class="col-md-12">
                            <input type="hidden" class="form-control" name="oderid" id="kh_email" value="@Model.tuple.Item1.oderid" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mb-3">Hình thức thanh toán</h4>
            <div class="custom-control custom-radio">
                <input id="httt-2" name="httt_ma" type="radio" class="custom-control-input" required="" value="2" onchange="showPaymentOption(2)">
                <label class="custom-control-label" for="httt-2">Chuyển khoản</label>
            </div>
            <div class="custom-control custom-radio">
                <input id="httt-3" name="httt_ma" type="radio" class="custom-control-input" required="" value="3" onchange="showPaymentOption(3)">
                <label class="custom-control-label" for="httt-3">Ship COD</label>
            </div>

            <hr class="mb-4">

            <div id="payment-option-2" style="display: none;">
                <!-- Nội dung cho hình thức thanh toán "Chuyển khoản" -->
                <div class="input-group-append">
                    <!-- Các phần tử liên quan đến hình thức thanh toán "Chuyển khoản" -->
                </div>
                <button type="button" class="btn btn-secondary" onclick="confirmPayment()">Xác nhận thanh toán</button>
            </div>

                <div id="payment-option-3" style="display: none;">
                    <!-- Nội dung cho hình thức thanh toán "Ship COD" -->
                    <label>Vui lòng điền đúng thông tin cá nhân để shop có thể thuận tiện liên hệ</label>
                    <form action="/admin/xacnhan" method="get">
                        <input type="hidden" name="id" value="@Model.tuple.Item1.oderid">
                        <input type="hidden" name="user" value="@Model.tuple.Item2.UserId">
                        <button type="submit" class="btn btn-secondary">Xác nhận</button>
                    </form>
                </div>
            </div>

            <script>
                function showPaymentOption(option) {
                    var paymentOption2 = document.getElementById("payment-option-2");
                    var paymentOption3 = document.getElementById("payment-option-3");

                    if (option === 2) {
                        paymentOption2.style.display = "block";
                        paymentOption3.style.display = "none";
                    } else if (option === 3) {
                        paymentOption2.style.display = "none";
                        paymentOption3.style.display = "block";
                    }
                }
            </script>
        <script>
            function confirmPayment() {
                // Lấy giá trị từ các trường input
                var kh_ten = document.getElementById("kh_ten").value;
                var kh_diachi = document.getElementById("kh_diachi").value;
                var kh_dienthoai = document.getElementById("kh_dienthoai").value;
                var kh_email = document.getElementById("kh_email").value;
                var oderid = document.getElementById("oderid").value;
                window.location.href = "/thanhtoan/call";
            }
        </script>
</body>